<%- include('./partials/header.ejs')  %> 
  <body>
    <nav>

        <% if (typeof success!='undefined'&& success.length>0){%>
           <% success.forEach(ele => {%>
               <h3><%= ele  %> </h3>
           <% }) %> 
        <% } %> 


      <h1 class="title"> Members Only</h1>
      
      <% if (user){%>
        <h1> Hi <%= user.first_name  %> !!</h1>
   
        <img src="/images/<%= user.avatarURL  %> " width="100" height="100" alt="see">
       <a href="/message">Create Message</a>
       <a href="/admin">Become admin</a>
       <a href="/profile/<%= user._id %> ">My Profile</a>
        <a href="/log-out"> Log out</a>
      <% }else{%>
        <div >
          <a href="/log-in">Log in</a>
          <a href="/sign-up">Sign up</a>
        </div>
     <% } %> 

      
    
    </nav>

    <section class="content">
        <% if (messages.length>0){ %>
         <% messages.forEach(msg=>{ %>
            <div>
              <h2> <%= msg.title  %>  </h2>
              <p> <%= msg.message  %> </p>
               <h4>Posted by: <span><%= msg.author.username  %> </span></h4>
              <% var tm = moment(msg.timestamp) %> 
              <p><%= moment(tm).fromNow()  %> </p>
              <% if (user&& (user.admin===true||user.username===msg.author.username) ){%>
                    <button><a href="/delete/<%= msg._id  %> ">delete</a></button>
                   
              <%}  %>
              
              <% if (user && user.username ===msg.author.username){%>
                  <button><a href="/editMessage/<%= msg._id  %> ">Edit</a></button>
              <%  } %> 
            </div>
         <% }) %>
       <% } %> 
    </section>
  </body>
</html>
