<%- include('./partials/header.ejs')  %> 
<%- include('./partials/nav.ejs')  %> 
<body>
    <form action="/message" method="Post">
        <label for="title"> Title: </label>
        <input type="text" name="title" id="title" value="<%= typeof messageData !='undefined'?messageData.title:''  %> " required>

        <label for="message">Message:</label>
        <input type="text" name="message" id="message" value="<%= typeof messageData!='undefined'?messageData.message:'' %> " required>
        <button>Post</button>
    </form>
    <% if (typeof errors != 'undefined'){ %>
        <% errors.forEach(message=>{ %>
            <div class="alert alert-danger" role="alert">
                <p> <%= message.msg  %> </p>
            </div>
        <% })%>
     <%  } %> 
</body>
</html>