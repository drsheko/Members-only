<%- include('./partials/header.ejs')  %> 
<%- include('./partials/nav.ejs')  %> 
<body>
    <form action="/message" method="Post" class="createmessage-form">
        <div class="form-group">
            <label for="title"> Title: </label><br>
        <input type="text" name="title" class="form-control" id="title" value="<%= typeof messageData !='undefined'?messageData.title:''  %> " required>
        </div>
        
        <div class="form-group">
            <label for="message">Message:</label>
        <input type="text" name="message" class="form-control" id="message" value="<%= typeof messageData!='undefined'?messageData.message:'' %> " required>
        </div>
        <div class="btn-container">
            <button  type="submit" class="btn btn-primary" >Post</button>
        </div>
       
    </form>
    <% if (typeof errors != 'undefined'){ %>
        <% errors.forEach(message=>{ %>
            <div class="alert alert-danger" role="alert">
                <p> <%= message.msg  %> </p>
            </div>
        <% })%>
     <%  } %> 
</body>
</html>